<!------ Include the above in your HEAD tag ---------->
<style>
    .custab{
    border: 1px solid #ccc;
    padding: 5px;
    margin: 5% 0;
    box-shadow: 3px 3px 2px #ccc;
    transition: 0.5s;
    }
.custab:hover{
    box-shadow: 3px 3px 0px transparent;
    transition: 0.5s;
    }
</style>
<div class="container">
    <div class="row">
    <table class="table table-striped custab">
    <thead>
  
        <tr><th>Date</th>
            <th>Name</th>
            <th>Subject matter</th>
            <th>Time</th>
            <th>Venue</th>
            <th>Participant</th>
           
        </tr>
    </thead>
    {{#each all_appointment}}
            <tr>
                <td>{{this.date}}</td>
                <td>{{this.name}}</td>
                <td>{{this.subject_matter}}</td>
                <td>{{this.time}}</td>
                <td>{{this.venue}}</td>
                <td>
                    {{#each this.participant}}
                    <p>{{this}}</p>
                    {{/each}}
                </td>
               
            </tr>
    {{/each}}            
    </table>
    </div>
</div>